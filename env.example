# ============================================
# Telegram Bot Configuration
# ============================================
# Получите токен у @BotFather в Telegram
BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# AgentRouter API Configuration
# ============================================
# Получите API ключ на https://agentrouter.org/console/token
# Требуется для голосового ввода транзакций
# Регистрация через GitHub или Linux.do
AGENTROUTER_API_KEY=sk-your_agentrouter_key_here

# ============================================
# Database Configuration
# ============================================
# PostgreSQL (рекомендуется для продакшена)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/finance_bot

# SQLite (для разработки и тестирования)
DATABASE_URL=sqlite+aiosqlite:///./finance.db

# PostgreSQL credentials (для Docker продакшена)
POSTGRES_USER=financebot
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=finance_bot

# ============================================
# Redis Configuration (опционально)
# ============================================
# Используется для кеширования и rate limiting

# Локальный Redis без пароля (для разработки)
# REDIS_URL=redis://localhost:6379/0

# Redis с паролем (для Docker продакшена)
REDIS_URL=redis://:change_me_in_production@localhost:6379/0

# Redis password (для Docker продакшена)
REDIS_PASSWORD=change_me_in_production

# ============================================
# AgentRouter API Configuration
# ============================================
# Retry and timeout settings for AgentRouter API requests

# Maximum number of retry attempts (default: 3)
AGENTROUTER_MAX_RETRIES=3

# Timeout for single API request in seconds (default: 10)
AGENTROUTER_TIMEOUT=10

# Total deadline for all retry attempts in seconds (default: 25)
AGENTROUTER_TOTAL_DEADLINE=25

# Maximum length of text to send to AgentRouter API (default: 1000)
AGENTROUTER_MAX_TEXT_LENGTH=1000

# ============================================
# Logging Configuration
# ============================================
# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/bot.log

# ============================================
# Application Settings
# ============================================
# Максимальная сумма транзакции (в рублях)
MAX_TRANSACTION_AMOUNT=10000000

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_PERIOD=60

# ============================================
# Whisper.cpp Configuration (for voice input)
# ============================================
# Model size: tiny, base, small, medium, large
# Recommendation: base (good balance between speed and accuracy)
WHISPER_MODEL=base

# Number of CPU threads for transcription
# Recommendation: 2-4 threads for optimal performance
WHISPER_THREADS=4

